---
import { cn } from "@/lib/utils";

interface Props {
  href: string;
  class?: string;
  icon?: string;
  external?: boolean;
}

const { href, class: className, icon, external = true, ...props } = Astro.props;
---

<a 
  href={href} 
  class={cn(
    "flex items-center justify-center gap-3 w-full px-6 py-4 rounded-full font-medium text-white transition-all duration-200 hover:scale-105 active:scale-95",
    "bg-black hover:bg-gray-800",
    "shadow-lg hover:shadow-xl",
    className
  )}
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
  {...props}
>
  {icon && (
    <img src={icon} alt="" class="w-5 h-5 object-contain" />
  )}
  <span class="text-sm font-semibold uppercase tracking-wide">
    <slot />
  </span>
</a>